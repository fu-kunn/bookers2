<div class="container">
  <div class="row">
   <div class="col-md-3">
    <%= render 'list', book: @book, user: @user %>
   </div>


    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
       <thead>
        <tr>
          <th>image</th>
          <th>name</th>
        </tr>
       </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <th><%= image_tag user.get_profile_image("50x50") %></th>
          <th><%= user.name %></th>
          <th><%= link_to"Show", user_path(user) %></th>
        </tr>
      <% end %>

      </tbody>
      </table>

    </div>


  </div>
</div>