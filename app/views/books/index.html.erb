
<div class="container">
  <div class="row">
    <div class="col-md-3">
    <%=form_with model:Book.new, local:true do |f| %>

    <% if @book.errors.any? %>
     <%= @book.errors.count %>error prohibited this obj from being saved:
     <ul>
      <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
     </ul>
    <% end %>

    <h2>User info</h2>



    <table class="table">
     <tbody>
      <tr>
       <th>
        <%= image_tag @user.get_profile_image("63x63") %>
       </th>
      </tr>
      <tr>
       <th>name</th>
       <th><%= @user.name %></th>
      </tr>
      <tr>
       <th>introduction</th>
       <th><%= @user.introduction %></th>
      </tr>
     </tbody>
    </table>

    <div class="row">
     <!--< if @user.id == current_user.id %>-->
      <%= link_to edit_user_path(current_user), class:'btn btn-outline-secondary btn-block' do %>
      <i class="fas fa-user-cog"></i>
      <% end %>
    </div>


    <h2>New book</h2>


     <div class="form-group">
      <label for="book_title">Title</label></br>
      <%= f.text_field :title %>
     </div>

     <div class="form-group">
      <label for="book_opnion">Opnion</label></br>
      <%= f.text_area :body %>
     </div>
     <div class="form-group">
      <%= f.submit 'Create Book', class:"btn btn-success" %>
     </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
       <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opnion</th>
        </tr>
       </thead>
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <th>
           <%= link_to user_path(book.user) do %>
           <%= image_tag book.user.get_profile_image("40x40") %>
           <% end %>
           </th>
          <th><%= link_to book.title, book_path(book) %></th>
          <th><%= book.body %></th>
        </tr>
      <% end %>
      </tbody>
      </table>

    </div>
    <% end %>

  </div>
</div>