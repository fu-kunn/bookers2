
<div class="container">
  <div class="row">
    <div class="col-md-3">
    <% if @book.errors.any? %>
     <%= @book.errors.count %>error prohibited this obj from being saved:
     <ul>
      <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
     </ul>
    <% end %>

    <h2>User info</h2>

    <%= image_tag @book.user.get_profile_image("63x63") %>

    <table class="table">
     <tbody>
      <tr></tr>
      <tr>
       <th>name</th>
       <th><%= @book.user.name %></th>
      </tr>
      <tr>
       <th>introduction</th>
       <th><%= @book.user.introduction %></th>
      </tr>
     </tbody>
    </table>

    <div class="row">

      <%= link_to edit_user_path(@user), class:'btn btn-outline-secondary btn-block' do %>
      <i class="fas fa-user-cog"></i>
      <% end %>

    </div>


    <h2>New book</h2>
    <%=form_with model:Book.new, local:true do |f| %>

     <div class="form-group">
      <label for="book_title">Title</label></br>
      <%= f.text_field :title %>
     </div>

     <div class="form-group">
      <label for="book_opnion">Opnion</label></br>
      <%= f.text_area :body %>
     </div>
     <div class="form-group">
      <%= f.submit 'Create Book', class:"btn btn-success" %>
     </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>


    <table class="table">
     <tbody>
      <tr>
       <td>
        <%= link_to user_path(@book.user)  do %>
         <%= image_tag @book.user.get_profile_image("40x40") %></br>
         <%= @book.user.name %>
        <% end %>
       </td>
       <td><%= link_to @book.title, book_path(@book) %></td>
       <td><%= @book.body %></td>
       <% if @book.user == current_user %>
       <td>
        <%= link_to"Edit", edit_book_path(@book), class: 'btn btn-success btn-sm btn-blok sign_up' %>
       </td>
       <td>
        <%= link_to"Destroy", book_path, class: 'btn btn-danger btn-sm', method: :delete,"data-confirm" => "本当に消しますか？" %>
       </td>
       <% end %>
      </tr>
     </tbody>
    </table>


    </div>
    <% end %>
  </div>
</div>